{
  "mcpServers": {
    "google-ads": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "${CLAUDE_PLUGIN_ROOT}/google_ads_mcp",
        "-m",
        "ads_mcp.server"
      ],
      "cwd": "${CLAUDE_PLUGIN_ROOT}/google_ads_mcp",
      "timeout": 30000,
      "env": {
        "GOOGLE_ADS_CREDENTIALS": "${CLAUDE_PLUGIN_ROOT}/google_ads_mcp/google-ads.yaml"
      }
    }
  }
}
